%body.login-page{:style => "min-height: 512.391px;"}
  .login-box
    = render "devise/shared/header"
    .card
      .card-body.login-card-body
        %p.login-box-msg Faça login para iniciar nova sessão

        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .input-group.mb-3
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-envelope

          .input-group.mb-3
            = f.password_field :password, autocomplete: "current-password", placeholder: 'Senha', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-lock

          .row
            - if devise_mapping.rememberable?
              .col-8
                .icheck-primary
                  = f.check_box :remember_me
                  = f.label :remember_me
              .col-4
                = f.submit "Entrar", class: "btn btn-primary btn-block"

        = render "devise/shared/links"
