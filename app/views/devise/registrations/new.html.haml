%body.login-page{:style => "min-height: 586.391px;"}
  .login-box
    .login-logo
      %b Relatório
      | ESTÁGIO
    .card
      .card-body.login-card-body
        %p.login-box-msg Registre-se

        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .input-group.mb-3
            = f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Nome Completo', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-user

          .input-group.mb-3
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-envelope

          .input-group.mb-3
            = f.password_field :password, autocomplete: "new-password", placeholder: 'Senha (Mínimo 6 caracteres)', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-lock
          .input-group.mb-3
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirme sua senha', class: 'form-control'
            .input-group-append
              .input-group-text
                %span.fas.fa-lock

          .row
            .col-12
              = f.submit "Registrar", class: "btn btn-primary btn-block"

        = render "devise/shared/links"
